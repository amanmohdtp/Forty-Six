# Groq AI Configuration
GROQ_API_KEY=your_groq_api_key_here

# Bot Configuration
PHONE_NUMBER=your_phone_number_here

# Command Prefix Configuration
# Prefix for bot commands (e.g., !help, !ping)
PREFIX_COMMANDS=!

# Query Prefix Configuration
# Enable/disable prefix requirement for AI queries
PREFIX_QUERIES_ENABLED=false
# Prefix for AI queries (only used if PREFIX_QUERIES_ENABLED=true)
PREFIX_QUERIES=?

# AI Model Configuration
# Available models: llama-3.3-70b-versatile, llama-3.1-70b-versatile, llama-3.1-8b-instant, mixtral-8x7b-32768
AI_MODEL=llama-3.3-70b-versatile

# AI Behavior in Groups
# Enable AI responses in group chats
AI_IN_GROUPS=true

# AI Behavior in DMs
# Enable AI responses in direct messages
AI_IN_DM=true

# Self-Only Mode
# When true, only the bot's own number can use AI in DMs
AI_SELF_ONLY=false
